"daemon"


import os
import importlib


from bot.spec import Cfg, Object, Handler, Storage
from bot.spec import daemon, forever, privileges, scan


import bot.modules


Cfg.mod = ",".join(bot.modules.__dir__())
Storage.wd = Cfg.wd


daemon(Cfg.pidfile)
privileges(Cfg.user)
scan(bot.modules, Cfg.mod, True)
forever()
